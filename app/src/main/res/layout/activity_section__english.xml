<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_section__english"
    android:layout_width="match_parent"
    android:background="#F7A401"

    android:layout_height="match_parent"
    tools:context="com.logischtech.kindergartenn.Section_English_basic">

    <TextView
        android:layout_width="match_parent"
        android:background="#F7A401"
        android:layout_height="70dp" />
    <ImageView
        android:layout_width="350dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:background="#1B5197"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true">







        <ImageView
            android:layout_width="90dp"
            android:src="@drawable/left"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="90dp"
            android:src="@drawable/voiceicons"
            android:id="@+id/btnvoice"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="90dp"
            android:src="@drawable/home"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="90dp"
            android:id="@+id/right"
            android:src="@drawable/right"
            android:layout_height="wrap_content" />






    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#1B5197"
        android:layout_height="15dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/l1"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/l1"
        android:background="#A7DFE6"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:text="ENGLISH"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="70dp"
            android:text="ALPHABETS"
            android:id="@+id/eng1"
            android:layout_gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingLeft="60dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/rect_purple"
            android:layout_height="100dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="70dp"
            android:text="ACTIVITY"
            android:id="@+id/eng2"
            android:paddingLeft="130dp"
            android:paddingTop="30dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="@drawable/rect_skyblue"
            android:layout_height="90dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="70dp"
            android:text="LINES"
            android:paddingTop="30dp"
            android:id="@+id/eng3"
            android:paddingLeft="90dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="0"
            android:layout_marginRight="70dp"
            android:background="@drawable/rect_yellow"
            android:layout_height="100dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_marginLeft="-100dp"
            android:layout_gravity="center"
            android:layout_marginTop="-180dp"
            android:src="@drawable/activity_icon"
            android:layout_height="70dp" />


    </LinearLayout>


</RelativeLayout>
